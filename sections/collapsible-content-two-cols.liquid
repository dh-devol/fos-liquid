{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collapsible-content collapsible-{{ section.settings.layout }}-layout isolate{% if section.settings.layout == 'section' %} page-width{% elsif section.settings.layout == 'none' %} content-container content-container--full-width{% endif %}">
    <div class="collapsible-content__wrapper section-{{ section.id }}-padding{% if section.settings.layout == 'section' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}">
      <div class="{% if section.settings.pattern_image == blank %}collapsible-content-wrapper-narrow{% else %}page-width{% endif %}">
        <div class="grid grid--1-col grid--2-col-tablet collapsible-content__grid{% if section.settings.desktop_layout == 'image_second' %} collapsible-content__grid--reverse{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <div class="grid__item">
            <div class="accordion">
              <details>
                <summary>
                  <h3 class="accordion__title inline-richtext h4">Description</h3>
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </summary>
                <div class="accordion__content rte" role="region">
                  <div class="sealing">
                    Requires Sealing?:
                    {{ section.settings.sealing }}
                  </div>
                  <div class="underfloor">
                    Suitable for underfloor heating?:
                    {{ section.settings.underfloor }}
                  </div>
                  <div class="walls">
                    Suitable for walls?:
                    {{ section.settings.walls }}
                  </div>
                  <div class="external">
                    Suitable for external use?:
                    {{ section.settings.external }}
                  </div>
                  <div class="long-description">
                    {{ section.settings.description }}
                  </div>
                </div>
              </details>
            </div>
            <div class="accordion">
              <details>
                <summary>
                  <h3 class="accordion__title inline-richtext h4">Specification</h3>
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </summary>
                <div class="accordion__content rte" role="region">
                  <div>
                    {{ section.settings.specification.value }}
                  </div>
                </div>
              </details>
            </div>
            <div class="accordion">
              <details>
                <summary>
                  <h3 class="accordion__title inline-richtext h4">Pattern Information</h3>
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </summary>
                <div class="accordion__content rte" role="region">
                  {% assign pattern = page.metafields.custom.tile_pattern.value %}
                  {{ pattern.display_title }}
                  {{ pattern.size_and_pattern }}
                  {{ pattern.pattern_image_2 | image_url }}
                </div>
              </details>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collapsible Content 2c",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "caption",
      "label": "t:sections.collapsible_content.settings.caption.label"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "t:sections.collapsible_content.blocks.collapsible_row.settings.heading.default",
      "label": "t:sections.collapsible_content.blocks.collapsible_row.settings.heading.label",
      "info": "t:sections.collapsible_content.blocks.collapsible_row.settings.heading.info"
    },
    {
      "type": "text",
      "id": "sealing",
      "label": "Requires Sealing?: "
    },
    {
      "type": "text",
      "id": "underfloor",
      "label": "Suitable for underfloor heating?: "
    },
    {
      "type": "text",
      "id": "walls",
      "label": "Suitable for walls?: "
    },
    {
      "type": "text",
      "id": "external",
      "label": "Suitable for external use?: "
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "richtext",
      "id": "specification",
      "label": "Specification"
    },
    {
      "type": "richtext",
      "id": "pattern",
      "label": "Pattern Information"
    },
    {
      "type": "image_picker",
      "id": "pattern_image",
      "label": "Pattern Image"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.collapsible_content.settings.image_ratio.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.collapsible_content.settings.image_ratio.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.collapsible_content.settings.image_ratio.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.collapsible_content.settings.image_ratio.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
